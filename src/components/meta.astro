---
let { tags } = Astro.props;

if (!tags) {
  tags = [];
}

let description = "Front-End Developer";
let keywords =
  "前端,网页,web,技术,css3,html5,frontend,front-end,ableton,production,react,reactjs";

tags.forEach((tag: string) => {
  keywords += `,${tag}`;
});
---

<meta
  name="viewport"
  content="width=device-width, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0"
/>
<meta name="keywords" content={keywords} id="keywords" />
<meta name="description" content={description} />
<link
  rel="alternate"
  href="/atom.xml"
  title="Atom Feed"
  type="application/atom+xml"
/>
<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
